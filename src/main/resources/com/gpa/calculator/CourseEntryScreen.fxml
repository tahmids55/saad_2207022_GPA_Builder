<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gpa.calculator.CourseEntryScreenController"
            prefHeight="600" prefWidth="1100" styleClass="root">

    <top>
        <BorderPane>
            <left>
                <Button fx:id="backButton" text="â† Back" onAction="#handleBackButtonAction" styleClass="button-back"/>
            </left>
            <center>
                <VBox alignment="CENTER" styleClass="header-box">
                    <Label text="Course Entry" styleClass="header-label"/>
                </VBox>
            </center>
        </BorderPane>
    </top>

    <center>
        <TableView fx:id="courseTableView" styleClass="table-view">
            <columns>
                <TableColumn fx:id="courseNameCol" text="Course Name" prefWidth="220"/>
                <TableColumn fx:id="courseCodeCol" text="Course Code" prefWidth="100"/>
                <TableColumn fx:id="courseCreditCol" text="Credits" prefWidth="70"/>
                <TableColumn fx:id="gradeCol" text="Grade" prefWidth="70"/>
                <TableColumn fx:id="teacher1Col" text="Teacher 1" prefWidth="150"/>
                <TableColumn fx:id="teacher2Col" text="Teacher 2" prefWidth="150"/>
                <TableColumn fx:id="deleteCol" text="Action" prefWidth="80"/>
            </columns>
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </BorderPane.margin>
        </TableView>
    </center>
    <right>
        <VBox spacing="15" alignment="TOP_LEFT" styleClass="form-pane">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <Label text="Add New Course" styleClass="sub-header-label"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Course Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="courseNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Course Code:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="courseCodeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Course Credit:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="courseCreditField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="e.g. 3.0 or 1.5"/>

                <Label text="Teacher 1 Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="teacher1NameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Teacher 2 Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="teacher2NameField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Grade:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="gradeComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="200"/>
            </GridPane>

            <Button text="Add Course" onAction="#handleAddCourseButtonAction" styleClass="button-add"/>

            <Separator/>

            <Label text="Set Target Credits" styleClass="sub-header-label"/>
            
            <GridPane hgap="10" vgap="10">
                <Label text="Target Credits:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="creditTargetField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button fx:id="setCreditTargetButton" text="Set Target" onAction="#handleSetCreditTargetButtonAction" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
            </GridPane>

            <Separator/>

            <Button fx:id="resetButton" text="Reset All Courses" onAction="#handleResetCoursesButtonAction" styleClass="button-reset"/>

            <VBox spacing="10" alignment="CENTER">
                <Label fx:id="creditTargetLabel" text="Target Credits: 15" styleClass="info-label"/>
                <Label text="Total Credits Required: 15" styleClass="info-label"/>
                <Label fx:id="totalCreditsLabel" text="Current Credits: 0" styleClass="info-label-bold"/>
                <Label fx:id="currentGpaLabel" text="Current GPA: 0.00" styleClass="info-label-bold"/>
                <Button fx:id="calculateGpaButton" text="Calculate GPA" onAction="#handleCalculateGpaButtonAction" disable="true"/>
                <Label fx:id="errorLabel" styleClass="error-label" textAlignment="CENTER" wrapText="true"/>
            </VBox>
        </VBox>
    </right>
</BorderPane>

