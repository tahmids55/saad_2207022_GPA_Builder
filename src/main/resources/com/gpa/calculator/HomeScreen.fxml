<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<!--
  This is the FXML for the Home Screen.
  It uses a BorderPane as the root layout.
  A VBox in the center holds a welcome Label and the start Button.
-->
<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gpa.calculator.HomeScreenController"
            prefHeight="400" prefWidth="600" styleClass="root">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Welcome to the GPA Calculator" styleClass="header-label"/>
            <Button text="Start GPA Calculator" fx:id="startButton" onAction="#handleStartButtonAction"/>
        </VBox>
    </center>

</BorderPane>

