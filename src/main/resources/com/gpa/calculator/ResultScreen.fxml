<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  This FXML file defines the final result screen.
  - It displays the calculated GPA in a prominent label.
  - A TableView is used to show a summary of all the courses entered, resembling an "Award Form".
  - A "Start Over" button allows the user to return to the home screen.
-->
<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gpa.calculator.ResultScreenController"
            prefHeight="600" prefWidth="800" styleClass="root">

    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="result-pane">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="GPA Calculation Result" styleClass="header-label"/>

            <Label fx:id="gpaLabel" styleClass="gpa-result-label"/>

            <Separator prefWidth="600"/>

            <Label text="Course Summary" styleClass="sub-header-label"/>

            <TableView fx:id="resultTableView" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="courseNameCol" text="Course Name" prefWidth="200"/>
                    <TableColumn fx:id="courseCodeCol" text="Course Code" prefWidth="100"/>
                    <TableColumn fx:id="courseCreditCol" text="Credits" prefWidth="70"/>
                    <TableColumn fx:id="gradeCol" text="Grade" prefWidth="70"/>
                    <TableColumn fx:id="teacher1Col" text="Teacher 1" prefWidth="150"/>
                    <TableColumn fx:id="teacher2Col" text="Teacher 2" prefWidth="150"/>
                </columns>
            </TableView>

            <Button text="Start Over" onAction="#handleStartOverButtonAction"/>
        </VBox>
    </center>
</BorderPane>

